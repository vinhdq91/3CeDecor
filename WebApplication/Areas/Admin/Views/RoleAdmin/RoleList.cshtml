@using DAL.Dtos;
@using DAL.Core.Enums;
@using DAL.Models.Account;

@model List<ApplicationRole>

@{
    ViewBag.Title = "Role List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int index = 0;
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý Quyền (Role)</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                        <li class="breadcrumb-item active">Quản Lý Quyền</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="container-fluid">
        <div class="bg-white card">
            <div class="row justify-content-end">
                <div class="col-md-3">
                    <div class=" pt-1">
                        <a class="text-white btn-sm btn-success" href="@Url.Action("CreateRole", "RoleAdmin")">Thêm quyền <i class="fas fa-plus"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9  w-100">
                    <partial name="~/Areas/Admin/Views/Shared/_MessgeAlert.cshtml">
                </div>
                <div class="col-md-12 p-3">

                    <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên Quyền</th>
                                <th>Ngày Tạo</th>
                                <th>Mô tả</th>
                                <th>Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ApplicationRole item in Model)
                            {
                                <tr>
                                    <td>@(index += 1)</td>
                                    <td class="font-weight-bold"> @Html.DisplayFor(modelItem => item.Name)</td>
                                    <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.CreatedDate) </td>
                                    <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.Description) </td>
                                    <td>
                                        <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("DeleteRole", "RoleAdmin" , new { roleId = item.Id })"> <i class="fas fa-trash-alt"></i></a>
                                        <a class="btn btn-sm btn-light text-blue border" href="@Url.Action("EditRole", "RoleAdmin" , new { roleId = item.Id })"> <i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts{
    <script src="~/js/admin.min.js"></script>
    <script>
        $("#role").addClass("active");
    </script>
}

