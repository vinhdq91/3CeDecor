@model List<DAL.Dtos.ProductCategoryDto>

@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý Loại Sản Phẩm</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản Lý Loại Sản Phẩm (category)</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="container-fluid ">
        <div class=" bg-white card  ">

            <div class="row">
                <div class="col-md-9  w-100 ">
                    <partial name="~/Areas/Admin/Views/Shared/_MessgeAlert.cshtml">
                </div>
                <div class="col-md-3 ">
                    <div class=" pt-1 ml-5">
                        <a class="text-white btn-sm btn-success" href="~/admin/ProductCategoryAdmin/Create">Add Category <i class="fas fa-plus"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 p-3">

                    <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>Tên loại sản phẩm</th>
                                <th>Mô tả</th>
                                <th>Ngày Tạo</th>
                                <th>Chức Năng</th>
                                <th>ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td style="font-size:15px;">@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                    <td>
                                        <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Delete", "ProductCategoryAdmin", new { productCategoryId = item.Id })"> <i class="fas fa-trash-alt"></i></a>
                                        <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "ProductCategoryAdmin", new { productCategoryId = item.Id })">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                    <td class="text-cam pt-4">@Html.DisplayFor(modelItem => item.Id)</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    $("#category").addClass("active");
</script>

