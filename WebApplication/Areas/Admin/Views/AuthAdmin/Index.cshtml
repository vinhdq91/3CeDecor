@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DAL.Models.Account.LoginModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="~/public/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/public/css/style.css" rel="stylesheet" />

</head>
<body class="bg-login-admin">
    <section class="pt-5">
        <div class="container pt-5 ">
            <div class="row justify-content-center">
                <div class="col-md-6  bg-white p-5">
                    <h3 class="text-center font-weight-bold text-cam">Đăng Nhập</h3>
                    <form method="post" asp-action="Login" asp-controller="AuthAdmin" name="from_login">
                        <label asp-for="Email" class="txt1"></label>
                        <div class="form-group w-100 validate-input">
                            <input asp-for="Email" class="form-control input100" type="text" name="Email">
                            <span asp-validation-for="Email" class="text-validate text-danger focus-input100"></span>
                        </div>

                        <label asp-for="Password" class="txt1"></label>
                        <div class="form-group w-100 validate-input">
                            <input asp-for="Password" class="form-control input100" type="password" name="PassWord">
                            <span asp-validation-for="Password" class="text-validate text-danger focus-input100"></span>
                        </div>

                        <button type="submit" class=" bg-cam btn-button  w-100">Đăng Nhập</button>
                        @*<span class="text-cam">@ViewBag.error</span>*@
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>