@model DAL.Dtos.DiscountCodeDto
@using DAL.Dtos

@{
    ViewBag.Title = "Edit DiscountCode";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    List<SelectListItem> listStatus = ViewBag.ListStatus;
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0 bg-light">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Cập Nhật Mã Khuyến Mại</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Admin">Home</a></li>
                        <li class="breadcrumb-item active">Cập Nhật Mã Khuyến Mại</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="pt-2">
        <div class="container bg-white p-4 card">
            <partial name="~/Areas/Admin/Views/Shared/_MessgeAlert.cshtml">
                @using (Html.BeginForm("EditDiscountCode", "DiscountCodeAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class=" row ">
                        <div class="col-md-4">  </div>
                        <div class="col-md-4"> <h3 class="text-center font-weight-bold text-success "> CẬP NHẬT MÃ KHUYẾN MẠI</h3> </div>
                        <div class="col-md-4 ">
                            <div class="float-right">
                                <button type="submit" class="btn btn-sm bg-success text-white"><i class="far fa-save"></i> Lưu</button>
                                <a href="~/admin/discountcodeadmin/discountcodelist" class="btn btn-sm bg-danger text-white"><i class="far fa-window-close"></i> Hủy</a>
                            </div>
                        </div>
                    </div>
                    <div class=" row ">
                        <div class="col-md-8">
                            <div>
                                <label for="psw"><span>Tên Mã</span></label>
                                @Html.EditorFor(model => model.DiscountCodeName, new { htmlAttributes = new { @class = "form-control", @maxlength = 6 } })
                                @Html.ValidationMessageFor(model => model.DiscountCodeName, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <label for="psw"><span>Phần trăm (%)</span></label>
                                @Html.EditorFor(model => model.DiscountRate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiscountRate, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <label for="psw"><span>Ngày hết hạn</span></label>
                                @Html.EditorFor(model => model.ExpireDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ExpireDate, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <label for="psw"><span>Số lượng</span></label>
                                @Html.EditorFor(model => model.NumberLeft, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NumberLeft, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <label for="psw"><span>Trạng Thái (Status)</span></label>
                                @Html.DropDownListFor(model => model.Status, listStatus, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                }
        </div>
    </section>
</div>

